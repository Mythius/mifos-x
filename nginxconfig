server {
    listen 443 ssl http2;
    server_name fs.mentorsglobal.org;

    ssl_certificate     /etc/letsencrypt/live/fs.mentorsglobal.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/fs.mentorsglobal.org/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache   shared:SSL:50m;
    ssl_protocols       TLSv1.2 TLSv1.3;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    client_max_body_size 20m;

    location / {
        proxy_pass http://localhost:4200;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_http_version 1.1;
    }

    location /fineract-provider/ {
        proxy_pass http://localhost:8080/fineract-provider/;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_http_version 1.1;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
        proxy_buffering off; # helps when streaming long requests/responses
    }
}